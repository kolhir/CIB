<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <item>
            <shape android:shape="rectangle">
                <!-- solid background -->
                <!--<solid android:color="#fffff528"/>-->
                <!-- draw a border around rectangle shape -->
                <stroke
                    android:color="@color/border_ser"
                    android:width="1dp"
                    />
                <!-- draw 35 dp radius for each corner -->
                <corners android:radius="8dp"/>
            </shape>
            </item>
            <item
                android:left="8dp">
                <bitmap android:gravity="left" android:src="@drawable/expand_button16" />
            </item>
        </layer-list>
    </item>
</selector>